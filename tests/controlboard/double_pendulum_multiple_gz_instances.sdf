<?xml version="1.0"?>

<sdf version='1.11'>

  <world name="tutorial_controlboard">
    <!-- <gravity>0 0 0</gravity> -->
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <model name="double_pendulum">
      <joint name="fixed_base" type="fixed">
        <parent>world</parent>
        <child>base_link</child>
      </joint>
      <link name='base_link'>
        <inertial>
          <pose>0 0 0 0 0 0</pose>
          <density>8000</density>
        </inertial>
        <collision name='base_link_fixed_joint_lump__base_collision'>
          <pose>0 0 1 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 2.15</size>
            </box>
          </geometry>
        </collision>
        <visual name='base_link_fixed_joint_lump__base_visual'>
          <pose>0 0 1 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 2.15</size>
            </box>
          </geometry>
        </visual>
      </link>
      <joint name='upper_joint' type='revolute'>
        <pose relative_to='base_link'>0.15 0 2 -1.5708 0 0</pose>
        <parent>base_link</parent>
        <child>link1</child>
        <axis>
          <xyz>1 0 0</xyz>
          <dynamics>
            <damping>0.0</damping>
            <spring_reference>0</spring_reference>
            <spring_stiffness>0.0</spring_stiffness>
          </dynamics>
        </axis>
      </joint>
      <link name='link1'>
        <pose relative_to='upper_joint'>0 0 0 0 0 0</pose>
        <self_collide>0</self_collide>
        <inertial>
          <pose>0 0 0.5 0 0 0</pose>
          <density>8000</density>
        </inertial>
        <collision name='upper_joint_collision'>
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name='upper_joint_visual'>
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 1.0</size>
            </box>
          </geometry>
        </visual>
      </link>
      <joint name='lower_joint' type='revolute'>
        <pose relative_to='link1'>0.15 0 0.9 0 0 0</pose>
        <parent>link1</parent>
        <child>link2</child>
        <axis>
          <xyz>1 0 0</xyz>
          <dynamics>
            <damping>0.0</damping>
            <spring_reference>0</spring_reference>
            <spring_stiffness>0.0</spring_stiffness>
          </dynamics>
        </axis>
      </joint>
      <link name='link2'>
        <pose relative_to='lower_joint'>0 0 0 0 0 0</pose>
        <self_collide>0</self_collide>
        <inertial>
          <pose>0 0 0.5 0 0 0</pose>
          <density>8000</density>
        </inertial>
        <collision name='lower_joint_collision'>
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name='lower_joint_visual'>
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 1.0</size>
            </box>
          </geometry>
        </visual>
      </link>

      <plugin name="gzyarp::ControlBoard" filename="gz-sim-yarp-controlboard-system">
        <yarpConfigurationFile>
          ../../../tests/controlboard/conf/gazebo_controlboard2.ini
        </yarpConfigurationFile>
        <initialConfiguration>0.0</initialConfiguration>
      </plugin>
      <!-- <plugin name='robotinterface' filename='libgazebo_yarp_robotinterface.so'>
      <yarpRobotInterfaceConfigurationFile>model://coupled_pendulum/conf/coupled_pendulum_nws.xml</yarpRobotInterfaceConfigurationFile>
      </plugin> -->
    </model>

  </world>
</sdf>
