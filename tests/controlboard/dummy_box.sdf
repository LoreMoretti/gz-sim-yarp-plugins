<?xml version="1.0"?>

<sdf version="1.11">

    <world name="tutorial_controlboard">
        <!-- <gravity>0 0 0</gravity> -->
        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <attenuation>
                <range>1000</range>
                <constant>0.9</constant>
                <linear>0.01</linear>
                <quadratic>0.001</quadratic>
            </attenuation>
            <direction>-0.5 0.1 -0.9</direction>
        </light>

        <model name="ground_plane">
            <static>true</static>
            <link name="link">
                <collision name="collision">
                    <geometry>
                        <plane>
                            <normal>0 0 1</normal>
                            <size>100 100</size>
                        </plane>
                    </geometry>
                    <surface>
                        <bounce>
                            <restitution_coefficient>1.0</restitution_coefficient>
                            <!-- <threshold>0.1</threshold> -->
                        </bounce>
                    </surface>
                </collision>
                <visual name="visual">
                    <geometry>
                        <plane>
                            <normal>0 0 1</normal>
                            <size>100 100</size>
                        </plane>
                    </geometry>
                    <material>
                        <ambient>0.8 0.8 0.8 1</ambient>
                        <diffuse>0.8 0.8 0.8 1</diffuse>
                        <specular>0.8 0.8 0.8 1</specular>
                    </material>
                </visual>
            </link>
        </model>

        <model name="box">
            <link name="box_link">
                <visual name="visual">
                    <geometry>
                        <box>
                            <size>0.15 0.15 0.15</size>
                        </box>
                    </geometry>
                    <pose>0 0 3.0 0 0 0</pose>
                </visual>
                <collision name="collision">
                    <geometry>
                        <box>
                            <size>0.15 0.15 0.15</size>
                        </box>
                    </geometry>
                    <pose>0 0 3.0 0 0 0</pose>
                    <surface>
                        <bounce>
                            <restitution_coefficient>1.0</restitution_coefficient>
                        </bounce>
                    </surface>
                </collision>
                <inertial>
                    <density>1000</density>
                </inertial>
            </link>
        </model>
    </world>
</sdf>
