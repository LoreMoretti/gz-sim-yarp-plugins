<?xml version="1.0"?>

<sdf version='1.11'>

  <world name="tutorial_controlboard">
    <physics type="ignored">
      <dart>
        <collision_detector>dart</collision_detector>
      </dart>
    </physics>
    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
      <engine>
        <filename>gz-physics-dartsim-plugin</filename>
      </engine>
    </plugin>
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>
    <plugin
      filename="gz-sim-sensors-system"
      name="gz::sim::systems::Sensors">
    </plugin>
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <model name="triple_pendulum">
      <joint name="fixed_base" type="fixed">
        <parent>world</parent>
        <child>base_link</child>
      </joint>
      <link name='base_link'>
        <inertial>
          <pose>0 0 0 0 0 0</pose>
          <density>8000</density>
        </inertial>
        <collision name='base_link_fixed_joint_lump__base_collision'>
          <pose>0 0 1.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 3.0</size>
            </box>
          </geometry>
        </collision>
        <visual name='base_link_fixed_joint_lump__base_visual'>
          <pose>0 0 1.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 3.0</size>
            </box>
          </geometry>
        </visual>
      </link>
      <joint name='joint1' type='revolute'>
        <pose relative_to='base_link'>0.15 0 3.0 -1.5708 0 0</pose>
        <parent>base_link</parent>
        <child>link1</child>
        <axis>
          <xyz>1 0 0</xyz>
          <dynamics>
            <damping>0.0</damping>
            <spring_reference>0</spring_reference>
            <spring_stiffness>0.0</spring_stiffness>
          </dynamics>
        </axis>
      </joint>
      <link name='link1'>
        <pose relative_to='joint1'>0 0 0 0 0 0</pose>
        <self_collide>0</self_collide>
        <inertial>
          <pose>0 0 0.5 0 0 0</pose>
          <density>8000</density>
        </inertial>
        <collision name='link1_collision'>
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 1</size>
            </box>
          </geometry>
        </collision>
        <visual name='link1_visual'>
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>0.15 0.15 1</size>
            </box>
          </geometry>
        </visual>
      </link>

      <plugin name="gzyarp::ControlBoard" filename="gz-sim-yarp-controlboard-system">
        <yarpConfigurationFile>
          ../../../tests/controlboard/conf/gazebo_controlboard_multiple_instances.ini
        </yarpConfigurationFile>
        <initialConfiguration>0.0</initialConfiguration>
      </plugin>
    </model>

  </world>
</sdf>
